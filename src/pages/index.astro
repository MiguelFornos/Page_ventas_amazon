---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Carousel from '../components/Carousel.astro';
import Card from '../components/Card.astro';
import Ecomienda from '../components/Encomienda.astro';
import Whastapp from '../components/whastapp.astro';
import Detalle from '../components/detalle.astro';
import Video from '../components/Video.astro';
import Footer from '../components/Footer.astro';

import imag1 from '../images/imag1.png'
import imag2 from '../images/imag2.png';
import imag3 from '../images/imag3.png'
---

<Layout title="Welcome to Astro.">
    <main>
        <Header />

        <Carousel />

        <Ecomienda />

        <div class="card-container flex flex-wrap justify-center dark:bg-gray-900 ml-1 gap-4 " id="gradiente">
            <div class="card-item flex-grow sm:flex-grow-0 sm:w-1/2 md:w-1/3 lg:w-1/4">
                <Card 
                    imag={imag1.src}
                    title="Servicio de Entrega" 
                    content={`Ofrecemos servicio delivery de tu paquetería hasta la puerta 
                    de tu casa y a todos los departamentos de Nicaragua a un costo adicional`} 
                />
            </div>
            <div class="card-item flex-grow sm:flex-grow-0 sm:w-1/2 md:w-1/3 lg:w-1/4">
                <Card 
                    imag={imag2.src}
                    title="Opciones de Pago"
                    content={`Brindamos múltiples opciones de pago seguras y convenientes, 
                    garantizando transacciones rápidas y confiables para tu mayor tranquilidad`} 
                />
            </div>
            <div class="card-item flex-grow sm:flex-grow-0 sm:w-1/2 md:w-1/3 lg:w-1/4">
                <Card 
                    imag={imag3.src}
                    title="Servicio al Cliente"
                    content={`Ofrecemos atención personalizada las 24 horas, resolviendo tus inquietudes con eficiencia y 
                    amabilidad. Tu satisfacción es nuestra prioridad`} 
                />
            </div>
        </div>

        
        <div class="flex flex-wrap lg:flex-nowrap mb-9 mt-8 gap-4 dark:bg-gray-900">
            <div class="w-full lg:w-1/3">
                <Detalle />
            </div>
            <div class="w-full lg:w-2/3">
                 <Video />
            </div>
        </div>
        <Whastapp />
        <Footer />
    </main>
</Layout>
